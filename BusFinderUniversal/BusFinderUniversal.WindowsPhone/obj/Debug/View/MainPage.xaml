<Page
	x:Class="BusFinderUniversal.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:BusFinderUniversal"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	FontFamily="{StaticResource PhoneFontFamilyNormal}"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
	DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}">

	<!--  LayoutRoot is the root grid where all page content is placed  -->
	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!--  TitlePanel contains the name of the application and page title  -->
		<StackPanel x:Name="TitlePanel"
					Grid.Row="0"
					Margin="12,17,0,28">
			<TextBlock Margin="12,0" Text="MY APPLICATION" />
			<TextBlock Margin="9,-7,0,0" Text="Person" />
		</StackPanel>

		<!--  ContentPanel - place additional content here  -->
		<Grid x:Name="ContentPanel"
			  Grid.Row="1"
			  Margin="12,0,12,0">
			<TextBlock HorizontalAlignment="Left"
					   VerticalAlignment="Top"
					   Text="Name"
					   TextWrapping="Wrap" />
			<TextBlock HorizontalAlignment="Center"
					   VerticalAlignment="Top"
					   Text="{Binding Person.Name, Mode=OneWay}"
					   TextWrapping="Wrap" />
			<TextBox Height="70"
					 Margin="-10,32,10,505"
					 Text="{Binding Person.Name, Mode=TwoWay}"
					 TextWrapping="Wrap" />
			<TextBlock Margin="10,107,0,0"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Top"
					   Text="Age"
					   TextWrapping="Wrap" />
			<TextBlock Margin="10,107,0,0"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Top"
					   Text="{Binding Person.Age, Mode=OneWay}"
					   TextWrapping="Wrap" />
			<TextBox Height="70"
					 Margin="-10,139,10,398"
					 Text="{Binding Person.Age, Mode=TwoWay}"
					 TextWrapping="Wrap" />

			<Button Height="115"
					Margin="215,0,0,256"
					VerticalAlignment="Bottom"
					Command="{Binding ShowMessageCommand}"
					Content="Show message!" />

			<Button Height="115"
					Margin="0,0,0,256"
					VerticalAlignment="Bottom"
					Command="{Binding IncreaseAgeCommand}"
					Content="IncreseAge" />
		</Grid>

		<!--
			Uncomment to see an alignment grid to help ensure your controls are
			aligned on common boundaries.  The image has a top margin of -32px to
			account for the System Tray. Set this to 0 (or remove the margin altogether)
			if the System Tray is hidden.
 
			Before shipping remove this XAML and the image itself.
		-->
		<!--  <Image Source="/Assets/AlignmentGrid.png" VerticalAlignment="Top" Height="800" Width="480" Margin="0,-32,0,0" Grid.Row="0" Grid.RowSpan="2" IsHitTestVisible="False" />  -->
	</Grid>
</Page>

