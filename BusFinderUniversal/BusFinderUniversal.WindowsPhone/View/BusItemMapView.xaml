		<!--<uc:BusStopView Name="bsView" />-->


		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<StackPanel Grid.Row="0" Orientation="Vertical">
				<Button Name="goView" Content="chiều đi" Background="Red" Width="93" Height="30" Margin="0,0,25,0" HorizontalAlignment="Right" Click="ViewGoRoute" BorderBrush="{x:Null}" Style="{StaticResource ButtonStyle2}" Opacity="0.4"/>
				<Button Name="reView" Content="chiều về" Background="Blue" Width="93" Height="30" Margin="0,-10,25,0" HorizontalAlignment="Right" Click="ViewReturnRoute" BorderBrush="{x:Null}" Style="{StaticResource ButtonStyle2}" Opacity="0.4"/>
			</StackPanel>
			<StackPanel Grid.Row="1">
				<Grid Height="430"></Grid>
			</StackPanel>
			<StackPanel Grid.Row="1" VerticalAlignment="Bottom">
				<Button Click="ToggleTracking" 
						BorderThickness="0" 
						MinWidth="60"
						HorizontalAlignment="Right" 
						VerticalAlignment="Bottom" 
						Style="{StaticResource RoundButton}" 
						Foreground="{x:Null}" 
						BorderBrush="Black">
					<Canvas>
						<Ellipse Height="25" Width="25" Fill="Black" Margin="-12.5,-12.5,0,0"></Ellipse>
						<Ellipse Height="22" Width="22" Fill="#FFF0F0F0" Margin="-11,-11,0,0"></Ellipse>
						<Ellipse Height="15" Width="15" Fill="Black" Margin="-7.5,-7.5,0,0"></Ellipse>
					</Canvas>
				</Button>
			</StackPanel>
		</Grid>






	</Grid>
</Page>
